{
  "name": "lms-platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:admin": "cd admin-app && npm run dev",
    "dev:all": "concurrently --names \"STUDENT,ADMIN\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm:dev\" \"npm:dev:admin\"",
    "start:all": "concurrently --names \"STUDENT,ADMIN\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm:start\" \"npm:start:admin\"",
    "build": "next build",
    "build:admin": "cd admin-app && npm run build",
    "export": "next export",
    "start": "next start",
    "start:admin": "cd admin-app && npm start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --passWithNoTests",
    "security:audit": "npm audit",
    "security:check": "npm audit && npm outdated",
    "security:fix": "npm audit fix",
    "lint": "next lint",
    "lint:security": "eslint . --ext .ts,.tsx --config .eslintrc.json",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "seed:qbank": "node scripts/seed-demo-qbank.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@neondatabase/serverless": "^1.0.2",
    "@stripe/stripe-js": "^8.3.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "1.4.10",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "eslint-plugin-security": "^3.0.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "face-api.js": "^0.22.2",
    "helmet": "^8.1.0",
    "jose": "^6.1.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "next": "14.0.0",
    "nodemailer": "^7.0.10",
    "postcss": "^8.5.6",
    "postgres": "^3.4.7",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^19.3.0",
    "swr": "^2.3.7",
    "tailwindcss": "^4.1.16",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.6",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "encoding": "^0.1.13"
  }
}
