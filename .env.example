# Environment Variables Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# Required: Neon Postgres connection string
# Get this from: https://console.neon.tech
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Required: Secret key for JWT token signing (use a strong random string)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# STRIPE PAYMENTS (Optional - for paid courses)
# =============================================================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# AI FEATURES (Optional - for AI assist)
# =============================================================================
GEMINI_API_KEY="your-gemini-api-key"

# =============================================================================
# APPLICATION
# =============================================================================
# Development or production
NODE_ENV="development"

# Application URL (for emails and callbacks)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin panel URL
NEXT_PUBLIC_ADMIN_URL="http://localhost:3001"

# =============================================================================
# FILE UPLOADS
# =============================================================================
# Maximum file size in bytes (5MB default)
MAX_FILE_SIZE="5242880"

# Allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# =============================================================================
# SECURITY
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate limit: requests per minute
RATE_LIMIT_MAX="100"

# =============================================================================
# SESSION
# =============================================================================
# Session cookie name
SESSION_COOKIE_NAME="lms_session"

# Session expiry (in seconds) - 7 days default
SESSION_MAX_AGE="604800"

# =============================================================================
# LOGGING
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL="info"

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
# Enable Face ID login
ENABLE_FACE_ID="true"

# Enable fingerprint login
ENABLE_FINGERPRINT="true"

# Enable daily video module
ENABLE_DAILY_VIDEOS="true"

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Keep .env.example updated with new variables
# 3. Use different values for development and production
# 4. Regenerate secrets when deploying to production
